@using Dominio;
@model List<Reseña>;

<h1>Reseñas con roja</h1>

@if (Model.Count > 0)
{
<table class="table">
    <thead>
        <tr>
            <th>
                Fecha
            </th>
            <th>
                Titulo
            </th>
            <th>
                Contenido
            </th>
            <th>
                Selección 1
            </th>
            <th>
                Selección 2
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (Reseña r in Model)
        {
            <tr>
                <td>
                    @r.Partido.FechaHora
                </td>
                <td>
                    @r.Titulo
                </td>
                <td>
                    @r.Contenido
                </td>
                <td>
                    @r.Partido.SeleccionUno.Pais.Nombre
                </td>
                <td>
                    @r.Partido.SeleccionDos.Pais.Nombre
                </td>
            </tr>
        }
    </tbody>
</table>
}
else { 
    <p>No tiene reseñas con roja</p>
}